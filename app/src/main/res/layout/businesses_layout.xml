<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/businesses_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    android:background="#111723">

    <ImageView
        android:id="@+id/imgBusiness"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/round_add_moderator_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imgBtnSubscribe"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="58dp"
        android:src="@drawable/outline_add_24"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imgBusiness"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtBusinessName"
        android:layout_width="70dp"
        android:layout_height="22dp"
        android:text="SwedenBank"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgBusiness" />

</androidx.constraintlayout.widget.ConstraintLayout>